{
  "name": "yt-transcript-cli",
  "version": "1.0.0",
  "description": "YouTube Transcript CLI with Gemini 2.5 Flash support",
  "main": "dist/main.js",
  "type": "module",
  "bin": {
    "yt-transcript": "dist/main.js"
  },
  "scripts": {
    "dev": "bun run src/main.ts",
    "build": "bun run --bun src/main.ts",
    "fetch": "bun run src/main.ts fetch",
    "batch": "bun run src/main.ts batch",
    "config": "bun run src/main.ts config",
    "help": "bun run src/main.ts --help"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.8",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@google/generative-ai": "^0.24.1",
    "chalk": "^5.6.2",
    "youtube-transcript": "^1.2.1",
    "youtube-transcript-plus": "^1.1.2",
    "zod": "^4.3.5"
  }
}